@using Microsoft.AspNetCore.Authorization

@page "/"
@attribute [Authorize]
<PageTitle>Home</PageTitle>

<AuthorizeView>
	<Authorized>
		<div class="home-container">
			<div class="welcome-card">
				<h1>Welcome, @context.User.Identity?.Name!</h1>
				<p>We're glad to have you here. Explore your options below or manage your account.</p>
				<form action="Account/Logout" method="post" class="logout-form">
					<AntiforgeryToken />
					<input type="hidden" name="ReturnUrl" value="@_currentUrl" />
					<button type="submit" class="logout-button" @onclick="() => ClearBrowserCache()">Logout</button>
				</form>
			</div>

			<div class="dashboard-links">
				<a href="/board/1" class="dashboard-card">
					<span class="material-symbols-outlined">Dashboard</span>
					<p>View your personalized dashboard.</p>
				</a>

				<a href="/Account/Manage" class="dashboard-card">
					<span class="material-symbols-outlined">Profile</span>
					<p>Manage your account settings.</p>
				</a>
			</div>
		</div>
	</Authorized>
</AuthorizeView>
<style>
	body {
		background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('https://www.transparenttextures.com/patterns/gray-sand.png');
		background-size: cover; /* Ensures it covers the entire screen */
		color: #333;
		margin: 0;
		padding: 0;
		font-family: 'Arial', sans-serif;
	}
	.home-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 20px;
		gap: 20px;
		text-align: center;
	}

	.welcome-card {
		background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
		color: white;
		padding: 30px;
		border-radius: 12px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
		text-align: center;
		max-width: 600px;
		width: 100%;
	}

	.welcome-card h1 {
		font-size: 2rem;
		margin-bottom: 10px;
	}

	.home-background {
		background: linear-gradient(135deg, #ff9a9e, #fad0c4); /* Gradient colors */
		min-height: 100vh;
		padding: 0; /* Adjust padding if needed */
		color: #333; /* Adjust text color for contrast */
	}

	.welcome-card p {
		font-size: 1.2rem;
		margin-bottom: 20px;
	}

	.logout-form {
		margin-top: 20px;
	}

	.logout-button {
		background-color: #e63946;
		color: white;
		padding: 10px 20px;
		border: none;
		border-radius: 6px;
		cursor: pointer;
		font-size: 1rem;
		transition: background-color 0.3s ease;
	}

	.logout-button:hover {
		background-color: #d62839;
	}

	.dashboard-links {
		display: flex;
		gap: 20px;
		flex-wrap: wrap;
		justify-content: center;
		max-width: 1200px;
		width: 100%;
	}

	.dashboard-card {
		background: white;
		color: #333;
		padding: 20px;
		border-radius: 12px;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		text-align: center;
		text-decoration: none;
		flex: 1 1 calc(33.33% - 20px);
		max-width: 400px;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.dashboard-card:hover {
		transform: scale(1.05);
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
	}

	.dashboard-card span.material-symbols-outlined {
		font-size: 48px;
		color: #6a11cb;
		margin-bottom: 10px;
	}

	.dashboard-card h3 {
		font-size: 1.5rem;
		margin-bottom: 10px;
	}

	.dashboard-card p {
		font-size: 1rem;
		color: #666;
	}
</style>