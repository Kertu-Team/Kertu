<RadzenStack Gap="8px" Style="height: 100vh">
    <RadzenTextBox Placeholder="Title..." Style="width: 100%" aria-label="Card title" />
    <RadzenTextArea Placeholder="Description..." Style="width: 100%; height: 100%" aria-label="Card description"/>
    <RadzenButton style="width: 160px" Icon="save" BusyText="Saving ..." IsBusy=@busy Click=@OnBusyClick Text="Save" />
</RadzenStack>

@code {
    bool busy;

    async Task OnBusyClick()
    {
        busy = true;
        await Task.Delay(2000);
        busy = false;
    }
}